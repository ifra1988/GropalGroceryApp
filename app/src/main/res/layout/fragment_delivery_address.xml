<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fillViewport="true"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <com.google.android.gms.maps.MapView
            android:id="@+id/mapView"
            android:layout_width="match_parent"
            android:layout_height="250dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/mapView"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/rl_address"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_loc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_location_on_black_24dp"></ImageView>

                <TextView
                    android:id="@+id/tv_location"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@+id/iv_loc"
                    android:fontFamily="sans-serif"
                    android:gravity="center"
                    android:maxLines="2"
                    android:text="@string/location"
                    android:textColor="@color/slate_gray"
                    android:textSize="15sp" />

                <Button
                    android:id="@+id/btn_change"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/sp_background"
                    android:text="@string/change"
                    android:textColor="@color/slate_gray">

                </Button>

            </RelativeLayout>


            <View
                android:layout_width="wrap_content"
                android:layout_height="2dp"
                android:background="@drawable/line"></View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif"
                    android:text="@string/first_name"
                    android:textColor="@color/slate_gray"
                    android:textSize="13sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif"
                    android:text="@string/last_name"
                    android:textColor="@color/slate_gray"
                    android:textSize="13sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/et_fName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif"
                    android:paddingLeft="0dp"
                    android:paddingTop="0dp"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/et_lName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif"
                    android:paddingLeft="0dp"
                    android:paddingTop="0dp"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif"
                    android:text="@string/flat_no"
                    android:textColor="@color/slate_gray"
                    android:textSize="13sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif"
                    android:text="@string/street"
                    android:textColor="@color/slate_gray"
                    android:textSize="13sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/et_flat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif"
                    android:paddingLeft="0dp"
                    android:paddingTop="0dp"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/et_street"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif"
                    android:paddingLeft="0dp"
                    android:paddingTop="0dp"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif"
                    android:text="@string/colony"
                    android:textColor="@color/slate_gray"
                    android:textSize="13sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif"
                    android:text="@string/village"
                    android:textColor="@color/slate_gray"
                    android:textSize="13sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/et_colony"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif"
                    android:paddingLeft="0dp"
                    android:paddingTop="0dp"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/et_village"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif"
                    android:paddingLeft="0dp"
                    android:paddingTop="0dp"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif"
                    android:text="@string/city"
                    android:textColor="@color/slate_gray"
                    android:textSize="13sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif"
                    android:text="@string/pin"
                    android:textColor="@color/slate_gray"
                    android:textSize="13sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/et_city"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif"
                    android:paddingLeft="0dp"
                    android:paddingTop="0dp"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/et_pin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif"
                    android:paddingLeft="0dp"
                    android:paddingTop="0dp"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

            </LinearLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:text="@string/address_type"
                android:textColor="@color/slate_gray"
                android:textSize="14sp" />


            <LinearLayout
                android:id="@+id/ll_btns"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center"

                >

                <Button
                    android:id="@+id/btn_home"
                    android:layout_width="60dp"
                    android:layout_height="35dp"
                    android:tag="0"
                    android:paddingTop="0dp"
                    android:paddingBottom="0dp"
                    android:text="@string/home"
                    android:background="@drawable/sp_background"
                    android:textColor="@color/dark_gray" />

                <Button
                    android:id="@+id/btn_office"
                    android:layout_width="60dp"
                    android:layout_height="35dp"
                    android:tag="1"
                    android:paddingTop="0dp"
                    android:layout_marginLeft="5dp"
                    android:paddingBottom="0dp"
                    android:text="@string/office"
                    android:background="@drawable/sp_background"
                    android:textColor="@color/dark_gray" />

                <Button
                    android:id="@+id/btn_shop"
                    android:layout_width="60dp"
                    android:layout_height="35dp"
                    android:tag="1"
                    android:paddingTop="0dp"
                    android:layout_marginLeft="5dp"
                    android:paddingBottom="0dp"
                    android:text="@string/shop"
                    android:background="@drawable/sp_background"
                    android:textColor="@color/dark_gray" />

                <Button
                    android:id="@+id/btn_others"
                    android:layout_width="60dp"
                    android:layout_height="35dp"
                    android:tag="1"
                    android:paddingTop="0dp"
                    android:layout_marginLeft="5dp"
                    android:paddingBottom="0dp"
                    android:text="@string/others"
                    android:background="@drawable/sp_background"
                    android:textColor="@color/dark_gray" />


            </LinearLayout>

            <Button
                android:id="@+id/btn_save"
                android:layout_width="255dp"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:background="@color/green"
                android:layout_marginTop="10dp"
                android:text="@string/save_address"
                android:textColor="@color/white" />

            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:layout_marginBottom="50dp" />


        </LinearLayout>


    </RelativeLayout>
</ScrollView>
